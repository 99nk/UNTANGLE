<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">
    <include
        android:id="@+id/settings_toolbsr"
        layout="@layout/app_bar_layout">

    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/settings_toolbsr">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile"
                android:id="@+id/settings_profile_image"/>
            <EditText
                android:id="@+id/settings_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_profile_image"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="4dp"

                android:hint="UserName"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/settings_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_username"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="4dp"

                android:hint="Full Name"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/settings_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_fullname"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="4dp"

                android:hint="Branch"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/settings_AdmissionNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_branch"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="4dp"

                android:hint="Admission No"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_AdmissionNo"
                android:text="Update accounts settings"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:id="@+id/update_account_settings_button"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>