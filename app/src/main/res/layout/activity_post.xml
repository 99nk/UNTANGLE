<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".PostActivity">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Post It!"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:fontFamily="@string/common_google_play_services_enable_title"/>


        >



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:layout_below="@+id/text"
        app:cardBackgroundColor="#fcfcfc"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:id="@+id/cv"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:textStyle="bold"
                 android:layout_marginRight="32dp"
                android:text="You want your post to be Public or Private?"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="22sp"
                 />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:id="@+id/rg1"
                android:layout_below="@+id/tv">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="PUBLIC"
                    android:id="@+id/post_public"
                    android:checked="false"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="PRIVATE"
                    android:id="@+id/post_private"
                    android:checked="false"/>
            </RadioGroup>


        </RelativeLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cv"
        app:cardBackgroundColor="#fcfcfc"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:id="@+id/cv2"
        android:visibility="gone"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:padding="8dp"

                android:text="You want to post your username?"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="20sp"
                />

            <RadioGroup
                android:id="@+id/rg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"

                android:layout_below="@+id/tv2">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="YES"
                    android:id="@+id/post_yes"
                    android:checked="false"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="NO"
                    android:id="@+id/post_no"
                    android:checked="false"/>
            </RadioGroup>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>






        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cv2"
            app:cardBackgroundColor="#fcfcfc"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:id="@+id/cv3"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    android:layout_height="wrap_content"
                    android:text="Select your complaint category"

                    android:textColor="#000000"
                    android:id="@+id/select"
                    android:layout_marginLeft="10dp"/>
                <Spinner
                    android:layout_below="@id/select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinner1"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="20dp"

                    android:textStyle="bold"

                    android:layout_height="wrap_content"
                    android:text="Select your sub-category"
                    android:layout_below="@id/spinner1"
                    android:id="@+id/select2"
                    android:layout_marginLeft="10dp"/>
                <Spinner
                    android:layout_below="@id/select2"
                    android:layout_width="match_parent"
                    android:id="@+id/spinner2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10sp"
                    />

        </RelativeLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cv3"
        app:cardBackgroundColor="#fcfcfc"
        android:visibility="gone"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:id="@+id/cv5"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="8dp"


                android:text="Choose a Sub-Category...."
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="20dp"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:gravity="center"
                android:id="@+id/rg5"

                android:layout_below="@+id/tv5">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="HOUSING"
                    android:layout_marginRight="28dp"
                    android:id="@+id/post_personal_housing"
                    android:textSize="15sp"
                    android:checked="false"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:text="RIGHT VIOLATION"
                    android:id="@+id/post_personal_rightviolation"
                    android:checked="false"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:layout_marginRight="28dp"
                    android:text="HEALTH"
                    android:id="@+id/post_personal_health"
                    android:checked="false"/>
            </RadioGroup>


        </RelativeLayout>




    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/bottom_navigation">

        <EditText

            android:id="@+id/post_description"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"

            android:layout_marginBottom="24dp"
            android:background="@drawable/edit_border"
            android:hint="   Write about your post  "
            android:textColorHint="@color/white"
            android:inputType="textMultiLine"
            android:padding="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/update_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_description"
            android:tint="@color/white"

            android:layout_marginBottom="0dp"
            android:elevation="10dp"
            android:src="@drawable/send"


            />
    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/bottom_navigation"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"

        app:itemTextColor="@color/bottom_nav_color"
        app:itemIconTint="@color/bottom_nav_color"
        android:background="?android:attr/windowBackground"
        />



</RelativeLayout>